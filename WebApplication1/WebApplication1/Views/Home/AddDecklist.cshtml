@model WebApplication1.Models.Decklist

@{
    ViewData["Title"] = "AddDecklist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddDecklist</h2>

<h4>Decklist</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddDecklist">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DeckName" class="control-label"></label>
                <input asp-for="DeckName" class ="form-control" />
            </div>
            @{ 
                for (int i = 0; i < 3; i++)
                {
            <div class="form-group">
                <label class="control-label" name="DecklistEntries[@i].Card.Name">Card name</label>
                <input class="form-control" name="DecklistEntries[@i].Card.Name">

                <label class="control-label" name="DecklistEntries[@i].Quantity">Quantity</label>
                <input class="form-control" name="DecklistEntries[@i].Card.Quantity" />

                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="DecklistEntries[@i].IsSideboard" value="true" /> IsSideboard
                        </label>
                    </div>
                </div>
            </div>
                    }
                }
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
